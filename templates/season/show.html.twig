{% extends 'base.html.twig' %}

{% block title %}Season
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-md-8 mx-auto">
				<h1 class="text-center my-3">Season</h1>

				<table class="table table-striped">

					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ season.id }}</td>
						</tr>
						<tr>
							<th>Number</th>
							<td>{{ season.number }}</td>
						</tr>
						<tr>
							<th>Year</th>
							<td>{{ season.year }}</td>
						</tr>
						<tr>
							<th>Description</th>
							<td>{{ season.description }}</td>
						</tr>
					</tbody>
				</table>
				<div class="d-grid gap-2">
					<a class="btn btn-outline-primary" href="{{ path('season_index') }}">back to list</a>

					<a class="btn btn-outline-secondary" href="{{ path('season_edit', {'id': season.id}) }}">edit</a>
				</div>

				{{ include('season/_delete_form.html.twig') }}


			</div>
		</div>
	</div>
{% endblock %}
