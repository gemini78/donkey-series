{% extends 'base.html.twig' %}

{% block title %}Season index
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-md-10 mx-auto">
				<h1 class="text-center my-3">Seasons</h1>
				<div class="position-relative my-5">
					<a class="btn btn-outline-secondary position-absolute bottom-0 end-0" href="{{ path('season_new') }}">Create new</a>
				</div>

				<table class="table table-striped table-season">

					<thead>
						<tr class="text-center">
							<th>Id</th>
							<th>Number</th>
							<th>Year</th>
							<th>Description</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for season in seasons %}
							<tr>
								<td>{{ season.id }}</td>
								<td>{{ season.number }}</td>
								<td>{{ season.year }}</td>
								<td>{{ season.description }}</td>
								<td>
									<span class="season-actions">
										<a title="show" href="{{ path('season_show', {'id': season.id}) }}">
											<i class="fas fa-eye"></i>
										</a>
										<a title="edit" href="{{ path('season_edit', {'id': season.id}) }}">
											<i class="fas fa-pencil-alt"></i>
										</a>
									</span>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="5">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>

				<div class="position-relative my-5">
					<a class="btn btn-outline-secondary" href="{{ path('season_new') }}">Create new</a>
				</div>

			</div>
		</div>
	</div>
{% endblock %}
