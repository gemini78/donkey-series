{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}
{% endblock %}

{% block body %}
	<div class="container my-3 program">
		<div class="media text-center">
			<img class="" src="{{program.poster}}" alt="{{ program.title }} poster">
			<div class="media-body">
				<h1 class="mt-0">{{ program.title }}</h1>
				<p>{{ program.synopsis }}</p>
				<p>Catégorie :
					{{ program.category.name }}</p>
			</div>
		</div>
		<table class="table table-striped caption-top">
			<caption class="text-center display-6">
				Seasons
			</caption>
			<thead>
				<tr>
					<th>number</th>
					<th>year</th>
					<th>description</th>
					<th>actions</th>

				</tr>
			</thead>
			<tbody>
				{% for season in seasons %}
					<tr>
						<td>{{season.number}}</td>
						<td>{{season.year}}</td>
						<td>
							<p>{{season.description}}</p>
						</td>
						<td>
							<a href="{{ path('program_season_show', { programId:program.id, seasonId:season.id } ) }}" class="btn btn-outline-secondary">Détails</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<strong>Acteurs :</strong>
		<ul class="list-group my-3">
			{% for actor in program.actors %}
				<li class="list-group-item">
					<a class="btn btn-outline-secondary mb-2" href="{{ path('actor_show', { id:actor.id })}}">{{ actor.name }}</a>
				</li>
			{% else %}
				<li class="list-group-item">Aucun acteur pour cette série</li>
			{% endfor %}
		</ul>


		<a class="btn btn-outline-primary" href="{{ path('program_index') }}">
			Retour à la liste des programmes
		</a>

	</div>
{% endblock %}
