{% extends 'base.html.twig' %}
{% block title %}Les cat√©gories
{% endblock %}
{%
block body %}
	<div class="container">
		<div class="row">
			<div class="col-md-6 mx-auto">
				<h1 class="text-center my-3">Categories</h1>
				<div class="position-relative my-5">
					<a class="btn btn-outline-secondary position-absolute bottom-0 end-0" href="{{ path('category_new') }}">Create new</a>
				</div>
				<table class="table table-striped table-category">
					<thead>
						<tr class="text-center">
							<th>Name</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
						{% for category in categories %}
							<tr>
								<td>
									{{ category.name }}
								</td>
								<td>
									<span class="category-actions">
										<a title="show" href="{{ path('category_show', { categoryName: category.name }) }}">
											<i class="fas fa-eye"></i>
										</a>
									</span>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
				<div class="position-relative my-5">
					<a class="btn btn-outline-secondary" href="{{ path('category_new') }}">Create new</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
