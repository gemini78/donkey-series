{% extends 'base.html.twig' %}

{% block title %}Episode index
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-md-12 mx-auto">
				<h1 class="text-center my-3">Episodes</h1>
				<div class="position-relative my-5">
					<a class="btn btn-outline-secondary position-absolute bottom-0 end-0" href="{{ path('episode_new') }}">Create new</a>
				</div>
				<table class="table table-episode table-striped mt-5">
					<thead>
						<tr class="text-center">
							<th>Id</th>
							<th>Title</th>
							<th>Number</th>
							<th>Synopsis</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for episode in episodes %}
							<tr>
								<td>{{ episode.id }}</td>
								<td>{{ episode.title }}</td>
								<td>{{ episode.number }}</td>
								<td class="text-justify">{{ episode.synopsis }}</td>
								<td>
									<div class="episode-actions">
										<a title="show" href="{{ path('episode_show',{slug:episode.slug} ) }}">
											<i class="fas fa-eye"></i>
										</a>
										<a title="edit" href="{{ path('episode_edit', {'slug': episode.slug}) }}">
											<i class="fas fa-pencil-alt"></i>
										</a>
									</div>

								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="5">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
				<div class="position-relative my-5">
					<a class="btn btn-outline-secondary" href="{{ path('episode_new') }}">Create new</a>
				</div>

			</div>
		</div>
	</div>
{% endblock %}
