{% extends 'base.html.twig' %}
{% block title %}Episode
{% endblock %}
{% block
body %}
	<div class="container">
		<div class="row">
			<div class="col-md-8 mx-auto">
				<h1 class="my-4 text-center">Episode</h1>

				<table class="table table-striped">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ episode.id }}</td>
						</tr>
						<tr>
							<th>Title</th>
							<td>{{ episode.title }}</td>
						</tr>
						<tr>
							<th>Number</th>
							<td>{{ episode.number }}</td>
						</tr>
						<tr>
							<th>Synopsis</th>
							<td>{{ episode.synopsis }}</td>
						</tr>
					</tbody>
				</table>
				<div class="d-grid gap-2">
					<a class="btn btn-outline-primary" href="{{ path('episode_index') }}">back to list</a>

					<a class="btn btn-outline-secondary" href="{{ path('episode_edit', { slug: episode.slug }) }}">edit</a>
				</div>

				{{ include("episode/_delete_form.html.twig") }}
			</div>
		</div>
	</div>
{% endblock %}
